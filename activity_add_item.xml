<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    tools:context=".AddItemActivity">


    <TextView
        android:id="@+id/Modifyitem_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:layout_marginBottom="51dp"
        android:text="Enter Item to be added"
        android:textColor="#055DB5"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ItemName_editText_DeleteItemActivity"
        app:layout_constraintEnd_toEndOf="@+id/ItemName_editText_DeleteItemActivity"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Modify_item_button_DeletItemActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="178dp"
        android:shadowColor="#D8D2D2"
        android:text="Add Item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iteprice_editText_Modifyactivity"
        app:strokeColor="#055DB5" />

    <EditText
        android:id="@+id/ItemName_editText_DeleteItemActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#BFBFBF"
        android:ems="10"
        android:gravity="center"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#055DB5"
        android:textColorHint="#055DB5"
        app:layout_constraintBottom_toTopOf="@+id/itemPrice_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Modifyitem_tittle" />

    <EditText
        android:id="@+id/iteprice_editText_Modifyactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#BFBFBF"
        android:ems="10"
        android:gravity="center"
        android:hint="Item Amount"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#055DB5"
        android:textColorHint="#055DB5"
        app:layout_constraintBottom_toTopOf="@+id/Modify_item_button_DeletItemActivity"
        app:layout_constraintStart_toStartOf="@+id/itemPrice_editText"
        app:layout_constraintTop_toBottomOf="@+id/itemPrice_editText" />

    <EditText
        android:id="@+id/itemPrice_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#BFBFBF"
        android:ems="10"
        android:gravity="center"
        android:hint="Item Price"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#055DB5"
        android:textColorHint="#055DB5"
        app:layout_constraintBottom_toTopOf="@+id/iteprice_editText_Modifyactivity"
        app:layout_constraintStart_toStartOf="@+id/ItemName_editText_DeleteItemActivity"
        app:layout_constraintTop_toBottomOf="@+id/ItemName_editText_DeleteItemActivity" />


</androidx.constraintlayout.widget.ConstraintLayout>