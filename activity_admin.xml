<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">


    <Button
        android:id="@+id/modify_ItemButton"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginBottom="204dp"
        android:text="Modify Item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_ItemButton" />

    <Button
        android:id="@+id/delete_ItemButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="39dp"
        android:text="Delete Item"
        app:layout_constraintBottom_toTopOf="@+id/modify_ItemButton"
        app:layout_constraintEnd_toEndOf="@+id/modify_ItemButton"
        app:layout_constraintStart_toStartOf="@+id/Add_ItemButton"
        app:layout_constraintTop_toBottomOf="@+id/Add_ItemButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="38dp"
        android:text="Admin Menu"
        android:textAlignment="center"
        android:textColor="#055DB5"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/Add_ItemButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Add_ItemButton"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:text="Add Item"
        app:layout_constraintBottom_toTopOf="@+id/delete_ItemButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>