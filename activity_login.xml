<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/Modifyitem_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/login_msg"
        android:textColor="#055DB5"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ItemName_editText_DeleteItemActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Create_Account_Button_CreateActivity"
        android:layout_width="278dp"
        android:layout_height="94dp"
        android:layout_marginTop="24dp"
        android:shadowColor="#D8D2D2"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword_DA"
        app:strokeColor="#055DB5" />

    <TextView
        android:id="@+id/textView_appName"
        android:layout_width="168dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:background="#050505"
        android:text="@string/store_name"
        android:textColor="#055DB5"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword_DA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#BFBFBF"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPersonName"
        android:textAlignment="center"

        android:textColor="#055DB5"
        android:textColorHint="#055DB5"
        app:layout_constraintStart_toStartOf="@+id/ItemName_editText_DeleteItemActivity"
        app:layout_constraintTop_toBottomOf="@+id/ItemName_editText_DeleteItemActivity" />

    <EditText
        android:id="@+id/ItemName_editText_DeleteItemActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:backgroundTint="#BFBFBF"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#055DB5"
        android:textColorHint="#055DB5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="27dp"
        android:text="Create Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView"
        />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="24dp"
        android:text="New User ?"
        android:textColor="#055DB5"
        app:layout_constraintBottom_toTopOf="@+id/button_create_account"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="New To the Organization ?" />

